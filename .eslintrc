{
  "env": {
    "amd": true,
    "node": true,
    "es6": true,
    "jest/globals": true
  },
  "extends": [
    "eslint:recommended",
    "airbnb-base/legacy"
  ],
  "globals": {
    "describe": false,
    "test": false,
    "expect": false
  },
  "parserOptions": {
    "sourceType": "module",
    "ecmaFeatures": {
      "experimentalObjectRestSpread": true
    }
  },
  "plugins": [
    "jest"
  ],
  "rules": {
    "linebreak-style": "off",
    "array-bracket-spacing": [
      "warn",
      "always",
      {
        "arraysInArrays": false
      }
    ],
    "computed-property-spacing": [
      "warn",
      "always"
    ],
    "max-len": [
      "error",
      120,
      2,
      {
        "ignoreUrls": true,
        "ignoreComments": false,
        "ignoreRegExpLiterals": true,
        "ignoreStrings": true,
        "ignoreTemplateLiterals": true
      }
    ],
    "space-before-function-paren": [
      "error",
      {
        "anonymous": "always",
        "named": "always",
        "asyncArrow": "always"
      }
    ],
    "no-plusplus": "off",
    "padded-blocks": "off"
  }
}
